{
  "name": "lightlink",
  "version": "0.1.0",
  "description": "Minimalistic HSL lighting control software for ESP8266/ESP32",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "author": "mockingbird",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "dgram": "^1.0.1",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.mockingbird.lightlink",
    "productName": "LightLink",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "udp.js",
      "src/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "forceCodeSigning": false
    }
  }
}
